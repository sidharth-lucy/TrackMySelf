<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/map_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Normal Map"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:visibility="visible"

        />

    <LinearLayout
        android:id="@+id/ll_map_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:padding="15dp"
        android:layout_gravity="right"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_none_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="None Type Map"
            android:layout_marginBottom="5dp"

            />

        <TextView
            android:id="@+id/tv_normal_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Normal Map"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/tv_satellite_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Satellite Map"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/tv_terrain_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terrain Map"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/tv_hybrid_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hybrid Map"
            />



    </LinearLayout>

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Tracking"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>
</RelativeLayout>
